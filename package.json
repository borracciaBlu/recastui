{
	"name": "reptil.dev",
	"version": "0.1.0",
	"description": "Simple, Accessible & White-label UI Components & Design System for your Solid Applications ðŸ™Œ",
	"homepage": "https://github.com/seed-blocks/reptil",
	"bugs": "https://github.com/seed-blocks/reptil/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/seed-blocks/reptil.git"
	},
	"keywords": [
		"react",
		"theming",
		"component-library",
		"ui-components",
		"whitelabel",
		"design-system",
		"white-label",
		"solidjs",
		"react-component-library"
	],
	"author": "",
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"changeset": "changeset",
		"clean": "turbo run clean && rm -rf node_modules",
		"commit": "git-cz",
		"format": "prettier . --write --ignore-path .gitignore && git update-index --again",
		"lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
		"prepare": "husky install",
		"release": "turbo run build && changeset publish",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"version-packages": "changeset version"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{md,json}": [
			"prettier --write"
		],
		"*.ts?(x)": [
			"eslint",
			"prettier --write"
		],
		"package.json": "npx sort-package-json"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"peerDependencies": {
		"solid-js": "1.1.2"
	},
	"devDependencies": {
		"@babel/core": "7.19.0",
		"@babel/preset-env": "7.19.0",
		"@changesets/cli": "^2.24.4",
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@commitlint/cz-commitlint": "^17.1.2",
		"@commitlint/prompt": "17.1.2",
		"@storybook/addon-actions": "6.5.10",
		"@storybook/addon-essentials": "6.5.10",
		"@storybook/addon-links": "6.5.10",
		"@storybook/html": "6.5.10",
		"@testing-library/dom": "^8.17.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^29.0.0",
		"@types/lodash.merge": "^4.6.7",
		"@types/node": "^18.7.16",
		"@types/prismjs": "^1.26.0",
		"@types/scroll-lock": "^2.1.0",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"babel-loader": "8.2.5",
		"babel-preset-solid": "1.5.4",
		"commitizen": "^4.2.5",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"eslint-plugin-solid": "^0.7.1",
		"husky": "^8.0.0",
		"inquirer": "8",
		"jest": "^29.0.2",
		"jest-environment-jsdom": "29.0.3",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prismjs": "^1.29.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"solid-jest": "0.2.0",
		"solid-js": "^1.5.4",
		"solid-testing-library": "^0.3.0",
		"solid-transition-group": "^0.0.11",
		"standard-version": "9.5.0",
		"storybook-builder-vite": "0.1.23",
		"ts-jest": "^29.0.0",
		"turbo": "^1.4.6",
		"typescript": "4.8.3",
		"vite": "3.1.0",
		"vite-plugin-dts": "^1.4.1",
		"vite-plugin-prismjs": "^0.0.8",
		"vite-plugin-solid": "2.3.0"
	},
	"volta": {
		"node": "18.6.0"
	}
}
